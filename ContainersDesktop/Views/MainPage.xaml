<Page
    x:Class="ContainersDesktop.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Source="/Assets/Icons/RGB_Minimizado.png" Width="300" Height="300"/>
        <HyperlinkButton Content="Meribia.Net" NavigateUri="http://www.meribia.net" Margin="0,0,0,15" HorizontalAlignment="Center" />
        <TextBlock x:Name="txtBienvenido" Text="{x:Bind ViewModel.MensajeBienvenida, Mode=OneWay}" FontSize="24" HorizontalAlignment="Center" />
    </StackPanel>
</Page>
